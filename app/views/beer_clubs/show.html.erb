<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<strong>Members:</strong>
<ul>
  <% @beer_club.memberships.each do |m| %>
  <li> <%= link_to m.user.username, m.user %> </li>
  <% end %>
</ul>
<% if current_user %>
  <%= link_to 'Edit', edit_beer_club_path(@beer_club) %>
<% end %>
