<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
    </tr>
  </thead>

  <tbody>
    <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_brewery_path(brewery), class:'btn btn-default btn-xs' %></td>
          <td><%= link_to 'Destroy', brewery, method: :delete, class:'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
