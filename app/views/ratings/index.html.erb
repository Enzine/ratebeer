<h2>List of ratings</h2>

<p>Number of ratings: <%= @ratings.count %>

<ul>
 <% @ratings.each do |rating| %>
   <li>
     <%= link_to rating.to_s, rating.beer %> <%= link_to rating.user.username, rating.user %>
  </li>
 <% end %>
</ul>
<% if current_user %>
  <%= link_to 'New Rating', new_rating_path %>
<% end %>
